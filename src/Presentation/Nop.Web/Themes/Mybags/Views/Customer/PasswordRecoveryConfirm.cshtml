@model PasswordRecoveryConfirmModel
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}
@using Nop.Web.Models.Customer;
<div class="main-content inner-page">
    <div class="container password-recovery-page">

        <div class="trade-form text-center">
            <h2>@T("Account.PasswordRecovery")</h2>

            <div class="page-body">
                @if (!String.IsNullOrEmpty(Model.Result))
                {
                    <div class="result">
                        @Model.Result
                    </div>
                }
                @if (!Model.DisablePasswordChanging)
                {
                    <div class="col-md-6 col-md-offset-3">
                        <div class="row">
                            <div class="col-md-12 mb-30">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-fields">
                                        <div class="field">
                                            <div class="col-md-4">
                                                @Html.LabelFor(model => model.NewPassword, new { }, ":")
                                                @Html.RequiredHint()
                                            </div>
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.NewPassword)
                                                @Html.ValidationMessageFor(model => model.NewPassword)
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="col-md-4">
                                                @Html.LabelFor(model => model.ConfirmNewPassword, new { }, ":")
                                                @Html.RequiredHint()
                                            </div>
                                            <div class="col-md-8">
                                                @Html.EditorFor(model => model.ConfirmNewPassword)
                                                @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="buttons">
                                        <input type="submit" name="set-password" class="btn-primary btn new-password-button" value="@T("Account.PasswordRecovery.ChangePasswordButton")" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            </div>
        </div>
        </div>
