@model IList<ProductOverviewModel>
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.NewProducts").Text);
}
@using Nop.Web.Models.Catalog;
<div class="center-1"> 
	<div class="breadcrumb">
			<ul>
				<li>
					<span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
						<a href="@Url.RouteUrl("HomePage")" itemprop="url">
							<span itemprop="title">@T("Products.Breadcrumb.Top")</span>
						</a>
					</span>
				</li>
				<li class="current-item">
					@T("New Products")      
				</li>
			</ul>
	</div>
		<div class="topic-title" id="ph-title">
			<h2>@T("Products.NewProducts")</h2>
		</div>
		<div class="customNewsList"></div>
	<div class="page recently-added-products-page">
		<!-- <div class="title mid-content-title">
			<div class="alignright">
				<a href="@Url.RouteUrl("NewProductsRSS")" class="pull-right header-rss" title="@T("Products.NewProducts.RSS.Hint")"><i class="fa fa-rss fa-2x header-rss-icon"></i></a>
			</div>
			<h3>@T("Products.NewProducts")</h3>
		</div> -->
		<div class="page-body">
			@if (Model.Count > 0)
			{
			<div class="productView">
				<div class="product-grid">
					<div class="product-listing-section">
						<div class="product-container">
							<ul>
								@foreach (var product in Model)
								{
									<li>
										@Html.Partial("_ProductBox", product)
									</li>
								}
							</ul>
						</div>
					</div>
				</div>
			</div>
			}
		</div>
	</div>
</div>
