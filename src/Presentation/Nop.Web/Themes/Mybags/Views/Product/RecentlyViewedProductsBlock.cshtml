@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="recentlyProductWrapper side-nav">
        <div class="recentlyHeadingLeft"><span>@T("Products.RecentlyViewedProducts")</span></div>
        <!-- Compare -->
        <div class="recentlyProduct">
            <ul class="nav">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var product = Model[i];

                    <li>
                        <a href="@Url.RouteUrl("Product", new { SeName = product.SeName })" title="@product.DefaultPictureModel.Title">
                            @if (!String.IsNullOrEmpty(product.DefaultPictureModel.ImageUrl))
                            {
                                <img class="img-thumbnail" alt="@product.DefaultPictureModel.AlternateText" src="@product.DefaultPictureModel.ImageUrl" title="@product.DefaultPictureModel.Title" />
                            }
                        &nbsp;@product.Name
                    </a>
                </li>
                }
            </ul>
            <!-- Compare -->
        </div>
    </div>
}